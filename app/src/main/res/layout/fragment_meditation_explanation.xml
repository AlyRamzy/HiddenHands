<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:textSize="17sp"
        android:text="If you’re having a down day, have it. Let yourself feel the emotions — BUT DO NOT STAY THERE. we are providing you with various options to get over the depression, and be a better version of your self."
        />


    <TextView
        android:id="@+id/videomeditation"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Videos"
        android:textSize="30sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/bookmeditation"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Books"
        android:textSize="30sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/routinemeditation"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="helpfull Routines"
        android:textSize="30sp"
        android:gravity="center"/>





</LinearLayout>
</android.support.constraint.ConstraintLayout>
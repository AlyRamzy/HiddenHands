<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="69dp">

        <ImageView
            android:id="@+id/questionicon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/wrong" />

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/patientquestion"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="This is my question ?"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/doctorsreply"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="Reply here"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/questiondate"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="center"
                android:text="22/7/2000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/questiontime"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="center"
                android:text="7:00 pm"
                android:textSize="10sp" />

        </LinearLayout>




    </LinearLayout>


</LinearLayout>